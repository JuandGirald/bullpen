<%= form_for [refinery, :cvs_admin, @language] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @language,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :level -%>
    <%= f.number_field :level -%>
  </div>

  <div class="field">
    <%= f.label :developer -%>
    <%= f.select(:cv_id, @cvs.collect {|d| [d.name, d.id] })%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.languages.admin.languages.language'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @language.name) -%>
<% end -%>
