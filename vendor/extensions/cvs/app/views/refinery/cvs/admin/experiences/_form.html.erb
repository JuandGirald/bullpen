<%= form_for [refinery, :cvs_admin, @experience] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @experience,
              :include_object_name => true %>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:name],
                :object => "cvs/experience" -%>
  </div>

  <div class='field'>
    <%= f.label :years -%>
    <%= f.number_field :years -%>
  </div>

  <div class="field">
    <%= f.label :developer -%>
    <%= f.select(:cv_id, @cvs.collect {|d| [d.name, d.id] })%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.experiences.admin.experiences.experience'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete') -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
