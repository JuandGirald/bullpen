<%= form_for [refinery, :cvs_admin, @education] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @education,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :title -%>
    <%= f.text_field :title, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= f.label :institution -%>
    <%= f.text_field :institution -%>
  </div>

  <div class="field">
    <%= f.label :developer -%>
    <%= f.select(:cv_id, @cvs.collect {|d| [d.name, d.id] })%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.educations.admin.educations.education'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @education.title) -%>
<% end -%>
