<ul>
  <% if ::Refinery::Cvs::Admin::EducationsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.cvs_admin_educations_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_cvs_admin_education_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Cvs::Admin::EducationsController.sortable? && ::Refinery::Cvs::Education.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Educations"),
                 refinery.cvs_admin_educations_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Educations"),
                 refinery.cvs_admin_educations_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
