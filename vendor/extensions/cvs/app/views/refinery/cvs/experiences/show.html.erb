<% content_for :body_content_title do %>
  <%= @experience.title %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @experience.name %>
    </p>
  </section>
  <section>
    <h1>Years</h1>
    <p>
      <%=raw @experience.years %>
    </p>
  </section>
  <section>
    <h1>Cv</h1>
    <p>
      <%=raw @experience.cv_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="experiences">
      <% @experiences.each do |experience| %>
        <li>
          <%= link_to experience.title, refinery.cvs_experience_path(experience) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
