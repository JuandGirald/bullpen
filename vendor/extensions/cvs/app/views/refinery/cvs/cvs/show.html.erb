<% content_for :body_content_title do %>
  <%= @cv.name %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @cv.name %>
    </p>
  </section>
  <section>
    <h1>Profile</h1>
    <p>
      <%=raw @cv.profile %>
    </p>
  </section>
  <section>
    <h1>Title</h1>
    <p>
      <%=raw @cv.title %>
    </p>
  </section>
  <section>
    <h1>Stackoverflow Reputation</h1>
    <p>
      <%=raw @cv.stackoverflow_reputation %>
    </p>
  </section>
  <section>
    <h1>Blog</h1>
    <p>
      <%=raw @cv.blog %>
    </p>
  </section>
  <section>
    <h1>Photo</h1>
    <p>
      <%= image_fu @cv.photo, nil %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="cvs">
      <% @cvs.each do |cv| %>
        <li>
          <%= link_to cv.name, refinery.cvs_cv_path(cv) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<ul id="projects">
    <% @projects.each do |project| %>
      <li>
        <%= project.name %>
      </li>
    <% end %>
  </ul>

<%= render '/refinery/content_page' %>
