<% content_for :body_content_title do %>
  <%= @project_interest_point.content %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @project_interest_point.content %>
    </p>
  </section>
  <section>
    <h1>Project</h1>
    <p>
      <%=raw @project_interest_point.project_id %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="project_interest_points">
      <% @project_interest_points.each do |project_interest_point| %>
        <li>
          <%= link_to project_interest_point.content, refinery.cvs_project_interest_point_path(project_interest_point) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
